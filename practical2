#2
#Sample list of customer account IDs
customer_ids = [102,205,150,123,301,110,175]
target_id = int(input("Enter Customer ID to search: "))
#----- a) Linear Search
def linear_search(customer_ids, target_id):
    for i in range(len(customer_ids)):
        if customer_ids[i] == target_id:
            return True
    return False
# Linear Search
found_linear = linear_search(customer_ids, target_id)
if found_linear:
    print("Linear Search: Found")
else:
    print("Linear Search: Not Found")


#Sample list of customer account IDs
customer_ids = [102,205,150,123,301,110,175]
#----- b) Binary Search
def binary_search(sorted_list, target_id):
    low = 0
    high = len(sorted_list) - 1
    while low <= high:
        mid = (low + high) // 2 # Corrected from original for Python integer division
        if sorted_list[mid] == target_id:
            return True
        elif target_id > sorted_list[mid]:
            low = mid + 1
        else:
            high = mid - 1
    return False
search_id = int(input("Enter Customer ID to search: "))
sorted_ids = sorted(customer_ids)
found_binary = binary_search(sorted_ids, search_id)
if found_binary == True:
    print("Element found in the given list")
